{
  "compilerOptions": {
    "target": "es5",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "esModuleInterop": true,
    "baseUrl": "."
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "dist"
  ]
}